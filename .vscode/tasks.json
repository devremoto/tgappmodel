{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/Api/Api.csproj"],
      "problemMatcher": "$tsc"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": ["publish", "${workspaceFolder}/Api/Api.csproj"],
      "problemMatcher": "$tsc"
    },
    {
      "label": "ng",
      "command": "ng",
      "options": {
        "cwd": "${workspaceFolder}/Web"
      },
      "type": "process",
      "args": ["serve", "-o", "--port=4300"],
      "problemMatcher": "$tsc"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": ["watch", "run", "${workspaceFolder}/Api/Api.csproj"],
      "problemMatcher": "$tsc"
    }
  ]
}
